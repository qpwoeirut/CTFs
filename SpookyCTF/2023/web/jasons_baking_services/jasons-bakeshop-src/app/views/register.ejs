<div class="d-flex justify-content-center" >
  <div class="text-center" class="col align-self-center" style="width:25%">
    <form class="form-signin" method="post" action="register">
      <img class="mb-4" src="/img/logo2.png" alt="" width="122" height="122">
      <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>
      
      <label for="username" class="sr-only"><b></b></label>
      <input class="form-control" type="text" placeholder="Username" name="username" id="username" required>

      <label for="password" class="sr-only"></label>
      <input class="form-control" type="password" placeholder="Password" name="password"  id="inputPassword"  required>
      <br>
      <button class="btn btn-lg btn-danger btn-block" type="submit">Register</button>
    </form>
  </div>
</div>




def find_p(n, e, D):
    R = IntegerModRing(n)
    while True:
        x = R(randint(1, 1 << 32))
        print("Using x =", x)

        P.<y> = PolynomialRing(R)

        start = time()
        xx = R(1)
        xe = x ^ e
        terms = []
        for i in range(D):
            terms.append(xx * y - x)
            xx *= xe
        print(f"Created polynomial terms after {time() - start} seconds")
        poly = product(terms)
        print(f"Created polynomial after {time() - start} seconds")

        xx = 1
        xeD = x ^ (e * D)
        points = []
        for b in range(D):
            points.append(xx)
            xx *= xeD

        values = multipoint_eval(poly, points)
        print(f"Finished multipoint eval after {time() - start} seconds")
        for val in values:
            p = gcd(val, n)
            if 1 < p < n and n % p == 0:
                return p



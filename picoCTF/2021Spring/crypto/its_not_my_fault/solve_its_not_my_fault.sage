# https://www.csa.iisc.ac.in/~chandan/courses/CNT/notes/lec6.pdf
def multipoint_eval(poly, points: list) -> list:
    # assert poly.nvariables() == 1
    x = poly.variables()[0]

    k = ceil(log2(poly.degree()))

    # implicit binary tree, root at idx 1
    polys = [0 for _ in range(1 << k)] + [x - points[i] if i < len(points) else 1 for i in range(1 << k)]

    for i in reversed(range(1 << k)):
        polys[i] = polys[2 * i] * polys[2 * i + 1]

    def recurse(f, pos: int):
        if pos <= 64:
            print(pos)
        if pos - (1 << k) >= len(points):
            return []
        if pos >= (1 << k):
            return [int(f(points[pos - (1 << k)]))]

        r0 = f % polys[2 * pos]
        r1 = f % polys[2 * pos + 1]
        return recurse(r0, 2 * pos) + recurse(r1, 2 * pos + 1)

    return recurse(poly, 1)

